<%= link_to "Clientes cadastrados", users_index_path %>
<hr>
<h1>Saldo <%= current_user.saldo_dotz %> dotz</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true, autocomplete: "Seu nome" %>
  </div>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf, autofocus: true, autocomplete: "000.000.000-00" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(Deixe em branco se não quiser atualizar)</i><br />
    <%= f.password_field :password, autocomplete: "Nova-Senha" %>
    <% if @minimum_password_length %>
      <br />
      <em> São necessários no minimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Senha_Atual %> <i>(Sua senha atual é necessária para atualizar as informações)</i><br />
    <%= f.password_field :current_password, autocomplete: "Senha-Atual" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_Senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmar-Senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>

<% if current_user.client %>
<h3>Cancelar conta</h3>

  <p><%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza disso?" }, method: :delete %></p>
<% end %>
<%= link_to "Voltar", :back %>
