<!DOCTYPE html>
<html>
  <head>
    <title>Loja Dotz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </head>

  <body>
    <%= nav_bar fixed: :top, brand: "Loja Dotz" do %>
      <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item 'Produtos', products_path %>

        <% if admin_signed_in? %>

          <%= menu_item "Novo Produto", new_product_path %>
          <%= menu_item "Meu Perfil", edit_admin_registration_path %>
          <%= menu_item "Sair", destroy_admin_session_path, method: :delete, data: { confirm: "Tem certeza que quer sair? "} %>

        <% elsif client_signed_in? %>

          <%= menu_item "Minhas compras", minhas_compras_path %>
          <%= menu_item "Meu Perfil", edit_client_registration_path %>
          <%= menu_item "Sair", destroy_client_session_path, method: :delete, data: { confirm: "Tem certeza que quer sair? "} %>
          
        <% else %>

          <%= menu_item "Sou Admin", new_admin_session_path %>
          <%= menu_item "Sou Client", new_client_session_path %>

        <% end %>
        
      <% end %>

      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
