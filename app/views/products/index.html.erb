<h1>Produtos da Loja DOTZ!!</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor dotz</th>
      <th>Imagem</th>
      <th>Estoque</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr scope="row">
        <td><%= product.nome %></td>
        <td><%= product.valor_dotz %></td>
        <td><%= image_tag product.image, style:"width:50px;" if product.image.attached? %></td>
        <td><%= product.estoque %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Visualizar', product %></td>
          <td><%= link_to 'Editar', edit_product_path(product) %></td>
          <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
        <% end %>
        <td><%= link_to 'Comprar Produto', new_product_purchase_path(product) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if admin_signed_in? %>
  <%= link_to 'Adicionar Produto', new_product_path %> |
<% end %>
